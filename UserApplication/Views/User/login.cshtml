@using ServiceLayer
@model ServiceLayer.Models.LoginModel
@{
    ViewBag.Title = "login";
}
@{
    Layout = "";
}
@*
    فایل جاوا اسکریپت در
    content/assets/js/login.js
    قرار دارد لطفا آن را ویرایش کنید
*@

<!DOCTYPE html>
<!--[if lt IE 7]>  <html class="ie ie6 lte9 lte8 lte7 no-js"> <![endif]-->
