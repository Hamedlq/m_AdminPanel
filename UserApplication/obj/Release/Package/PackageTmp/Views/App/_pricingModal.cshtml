@using ServiceLayer.Models
<div class="modal fade direction-rtl" id="pricingModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close pull-left" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="costTitle"></h4>
            </div>
            <div class="modal-button">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">نمیخام برم</button>
                <button type="button" class="btn btn-default previousStep pull-left" data-dismiss="modal">مرحله قبل</button>
                <button type="submit" id="pricing-btn" class="btn btn-submit btn-primary">ثبت مسیر </button>
            </div>

            <div class="alert-wrap"></div>
            <form id="Costform">
                <div class="modal-body">
                    <fieldset>
                        <div class="col-md-12">
                            <div class="form-group">

                                <div class="col-md-6 pull-right">
                                    <label><input type="radio" name="CostOption" value="@PayingOptions.NoMatter" checked="checked" /><span id="noMatterPrice"></span></label>
                                </div>
                                <div class="hr-totop"></div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-6 pull-right">
                                    <label>
                                        <input type="radio" name="CostOption" value="@PayingOptions.MinMax" /><span id="priceMinMax"></span>
                                        <div class="input-group input-group direction-ltr">
                                            <span class="input-group-addon">ریال</span>
                                            <input class="form-control" id="MinMaxCost" type="text">
                                        </div>
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="hr-totop"></div>
                                <div class="col-md-6 pull-right">
                                    <label><input type="radio" name="CostOption" value="@PayingOptions.Free" /><span id="freePrice"></span></label>
                                </div>
                            </div>
                        </div>
                    </fieldset>

                </div>
                <div class="modal-footer">
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
